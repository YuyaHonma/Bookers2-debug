<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag current_user.get_profile_image, size: '100x100' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td>
  <% if book.category.present? %>
    <%= link_to book.category, tagsearches_search_path(content: book.category) %>
  <% end %>
</td>


        <td id="favorite_btn_<%= book.id %>">
          <%= render 'favorites/favorite_btn', book: book %></td>
        <td>コメント数：<%= book.book_comments.count %></td>
        <td>閲覧数: <%= book.view_counts.count %></td>
        <td><%= render "books/static_rate", book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>